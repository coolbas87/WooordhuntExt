{
    "manifest_version": 2,
    "version": "1.0",
    "name": "WooordHunt translator",
    "description": "A simple extension for translation word in the WooordHunt.ru",                
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
      }
}